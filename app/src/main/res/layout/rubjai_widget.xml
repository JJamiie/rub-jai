<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_open_app"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/btn_select_open_app"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txt_summary_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_expense"
            style="@style/text_main_button"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_select_expense"
            android:text="@string/expense" />

        <Button
            android:id="@+id/btn_income"
            style="@style/text_main_button"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_select_income"
            android:text="@string/income" />


    </LinearLayout>
</FrameLayout>